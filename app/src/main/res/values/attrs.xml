<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomToolbar">
        <attr name="title" format="string" />
        <attr name="showBackButton" format="boolean" />
        <attr name="backButtonIcon" format="reference" />
        <attr name="hamburgerIcon" format="reference" />
        <attr name="showHamburgerIcon" format="boolean" />
        <attr name="firstOptionMenu" format="reference" />
        <attr name="secondOptionMenu" format="reference" />
        <attr name="thirdOptionMenu" format="reference" />
        <attr name="toolbarColor" format="color" />
        <attr name="toolbarTitleColor" format="color" />
        <attr name="moreOptionIcon" format="reference" />
        <attr name="maxItemAllowed" format="integer" />
        <attr name="popupMenuElevation" format="dimension" />
        <attr name="popupMenuCornerRadius" format="dimension" />
        <attr name="popupMenuBackgroundColor" format="color" />
        <attr name="showAppName" format="boolean" />
        <attr name="showShortTitle" format="string" />
    </declare-styleable>

    <declare-styleable name="RoundedConstraintLayout">
        <attr name="cornerLeftTop" format="dimension" />
        <attr name="cornerRightTop" format="dimension" />
        <attr name="cornerLeftBottom" format="dimension" />
        <attr name="cornerRightBottom" format="dimension" />
        <attr name="backgroundColor" format="color" />
        <attr name="backgroundImage" format="reference" />
        <attr name="strokeLineWidth" format="dimension" />
        <attr name="strokeLineColor" format="color" />
        <attr name="dashLineWidth" format="dimension" />
        <attr name="dashLineGap" format="dimension" />
        <attr name="cornerLeftSide" format="dimension" />
        <attr name="cornerRightSide" format="dimension" />
        <attr name="cornerAll" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RatingBar">
        <attr name="rb_max_count" format="integer"/>
        <attr name="rb_count" format="integer"/>
        <attr name="rb_fill" format="reference"/>
        <attr name="rb_empty" format="reference"/>
        <attr name="rb_space" format="dimension"/>
        <attr name="rb_click_rating" format="boolean"/>
        <attr name="rb_touch_rating" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CircularSeekBar">
        <attr name="primaryColor" format="color" />
        <attr name="secondaryColor" format="color" />
        <attr name="staticColor" format="color" />
        <attr name="progress" format="integer" />
        <attr name="secondaryProgress" format="integer" />
        <attr name="maxValue" format="integer" />
        <attr name="minValue" format="integer" />
        <attr name="startAngle" format="integer" />
        <attr name="endAngle" format="integer" />
        <attr name="sweepAngle" format="integer" />
        <attr name="selectionScale" format="float" />
        <attr name="thumb" format="reference" />
        <attr name="detectTouchInside" format="boolean" />
        <attr name="textProgressEnabled" format="boolean" />
        <attr name="rotateAngle" format="float" />
        <attr name="textColor" format="color" />
        <attr name="progressStrokeWidth" format="float" />
        <attr name="textFormat" format="enum">
            <enum name="time" value="0" />
            <enum name="plain" value="1" />
        </attr>
        <attr name="seekDirection" format="enum">
            <enum name="clockwise" value="0" />
            <enum name="counterclockwise" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="MaxHeightRecyclerView">
        <attr name="maxCustomHeight" format="dimension" />
    </declare-styleable>
</resources>