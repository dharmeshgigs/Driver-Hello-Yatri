        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="OtpItemHeight">@dimen/_40sdp</item>
        <item name="OtpItemWidth">@dimen/_40sdp</item>
        <item name="OtpItemRadius">@dimen/_5sdp</item>
        <item name="OtpItemSpacing">@dimen/_5sdp</item>
        <item name="OtpCursorWidth">0dp</item>
        <item name="OtpState_filled">true</item>
        <item name="android:cursorVisible">false</item>
        <item name="OtpItemCount">6</item>
        <item name="OtpViewType">rectangle</item>
        <item name="OtpCursorColor">@android:color/transparent</item>
