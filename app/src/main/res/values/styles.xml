<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppThemeFullScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="DialogStyle" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_top</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.EditText.Otp" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/selector_otp</item>
        <item name="android:gravity">center</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:inputType">number</item>
        <item name="android:cursorVisible">true</item>
    </style>

    <style name="BaseButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="backgroundTint">@null</item>
        <item name="iconGravity">textStart</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="RegularButtonStyle" parent="BaseButtonStyle">
        <item name="fontFamily">@font/lufga_regular</item>
        <item name="android:fontFamily">@font/lufga_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="iconSize">@dimen/_17sdp</item>
        <item name="iconPadding">@dimen/_3sdp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">@dimen/_13sdp</item>
        <item name="android:paddingBottom">@dimen/_13sdp</item>
        <item name="android:background">@drawable/bg_round_rect_transparent_radius_10</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SmallButtonStyle" parent="BaseButtonStyle">
        <item name="fontFamily">@font/lufga_regular</item>
        <item name="android:fontFamily">@font/lufga_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="iconSize">@dimen/_17sdp</item>
        <item name="iconPadding">@dimen/_3sdp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:background">@drawable/bg_round_rect_transparent_radius_20</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="PrimaryButtonStylePurpleColor" parent="RegularButtonStyle">
        <item name="android:backgroundTint">@color/buttonColor</item>
    </style>

    <style name="SmallButtonStyleGreyColor" parent="SmallButtonStyle">
        <item name="android:backgroundTint">@color/grey</item>
    </style>

